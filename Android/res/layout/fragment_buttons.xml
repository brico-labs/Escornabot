<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layButtons"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3" >
    
    <ImageView
        android:id="@+id/btn_north"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_column="1"
        android:layout_margin="5dp"
        android:layout_row="0"
        android:adjustViewBounds="true"
        android:contentDescription="north"
        android:scaleType="centerCrop"
        android:src="@drawable/btn_arrow_n"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/btn_go"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_column="1"
        android:layout_margin="5dp"
        android:layout_row="1"
        android:adjustViewBounds="true"
        android:contentDescription="go"
        android:scaleType="centerCrop"
        android:src="@drawable/btn_arrow_go"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/btn_west"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_column="0"
        android:layout_margin="5dp"
        android:layout_row="1"
        android:adjustViewBounds="true"
        android:contentDescription="west"
        android:scaleType="centerCrop"
        android:src="@drawable/btn_arrow_w"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/btn_east"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_column="2"
        android:layout_margin="5dp"
        android:layout_row="1"
        android:adjustViewBounds="true"
        android:contentDescription="east"
        android:scaleType="centerCrop"
        android:src="@drawable/btn_arrow_e"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/btn_south"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_column="1"
        android:layout_margin="5dp"
        android:layout_row="2"
        android:adjustViewBounds="true"
        android:contentDescription="south"
        android:scaleType="centerCrop"
        android:src="@drawable/btn_arrow_s"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/btn_reset"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_column="0"
        android:layout_margin="5dp"
        android:layout_row="2"
        android:adjustViewBounds="true"
        android:contentDescription="reset"
        android:scaleType="centerCrop"
        android:src="@drawable/btn_arrow_reset"
        tools:ignore="HardcodedText" />

</GridLayout>